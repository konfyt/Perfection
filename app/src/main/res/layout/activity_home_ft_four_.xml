<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.konfyt.perfection.Home_ft_four_Activity"
        >

    <LinearLayout

            android:id="@+id/home_ft_four_item_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
        <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/good_fanhui"
                android:clickable="true"
                android:onClick="four"
                />
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                >
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="专题推荐"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#ce0909"
                    />
        </LinearLayout>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                />
    </LinearLayout>
    <ListView
            android:layout_below="@+id/home_ft_four_item_layout"
            android:id="@+id/home_ft_four_item_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    </ListView>
</RelativeLayout>
