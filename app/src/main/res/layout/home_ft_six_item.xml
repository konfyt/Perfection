<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
        >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:id="@+id/home_ft_six_im"
            android:scaleType="fitXY"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:src="@mipmap/morentu"
            />

    <LinearLayout
            android:id="@+id/home_ft_six_layout1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="#8c706e6e"
            android:layout_alignBottom="@+id/home_ft_six_im"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

        <TextView
                android:id="@+id/home_ft_six_tv1"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="aaa"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                />

        <TextView
                android:id="@+id/home_ft_six_tv2"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="match_parent"
                android:textColor="#de3636"
                android:text="bbb"
                android:gravity="center_vertical"
                android:textSize="18sp"
                />


    </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/home_ft_six_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_ft_six_layout2"
            android:orientation="horizontal"
            android:background="@drawable/home_ft_six_item"
            >

        <ImageView
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:src="@mipmap/dun"
                />

        <TextView
                android:id="@+id/home_ft_six_tv3"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:textColor="#b7b5b5"
                android:text="aaa"
                android:maxLines="3"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/home_ft_six_layout2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/home_ft_six_layout3"
            android:orientation="horizontal"
            android:background="@drawable/home_ft_six_item"
            >

        <Button
                android:background="@null"
                android:drawableLeft="@mipmap/index_like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="喜欢"
                android:gravity="center"
              android:id="@+id/six_button1"
                />

        <Button
                android:background="@null"
                android:drawableLeft="@mipmap/fenxiang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="分享"
                android:gravity="center"
                android:id="@+id/six_button2"
                />

        <Button
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="查看详情"
                android:gravity="center"
                android:id="@+id/six_button3"
                />


    </LinearLayout>


</RelativeLayout>