<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.konfyt.perfection.fragment.ShoppingCartFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/view1"
        android:gravity="center"
        android:background="#ffffff"
        android:textSize="16sp"
        android:textColor="#ff0000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="购物车"/>
    <RelativeLayout
        android:id="@+id/view2"
        android:padding="5dp"
        android:background="#dadada"
        android:gravity="center"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全场满"/>
        <TextView
            android:textColor="#ea2f2f"
            android:layout_toRightOf="@id/view3"
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"/>
        <TextView
            android:layout_toRightOf="@id/view4"
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免运费"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view10"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <CheckBox
            android:layout_centerVertical="true"
            android:id="@+id/select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomCheckboxTheme" />
        <TextView
            android:id="@+id/view6"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_toRightOf="@id/select_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全选"/>
        <LinearLayout
            android:layout_toRightOf="@id/view6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginRight="5dp"
                android:id="@+id/view8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent">

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/money_tv"
                    android:textColor="#f21919"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已经优惠0.00元"/>
                <TextView
                    android:layout_toLeftOf="@+id/money_tv"
                    android:id="@+id/view9"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总额："/>
            </RelativeLayout>
            <Button
                android:id="@+id/jiesuan_btn"
                android:background="#fd0404"
                android:text="结算"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:layout_below="@id/view2"
        android:layout_above="@id/view10"
        android:id="@+id/cat_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</RelativeLayout>
